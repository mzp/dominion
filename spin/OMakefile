.PHONY: trace run example clean

FILES[] =
	dominion.promela
CFLAGS=
GCC=gcc $(CFLAGS)

pan.c: $(FILES)
	spin -a $(FILES)

trace:
	spin $(FILES)

dead: pan.c
	$(GCC) -DSAFETY pan.c
	./a.out -e

live: pan.c
	$(GCC) -DNP pan.c
	./a.out -l


example: a.out
	./a.out -c5 -e
	spin -t -c $(FILES)

clean:
	rm -f *.trail *~ a.out *.c *.b *.h *.m *.t